# Database (PostgreSQL required in production)
DATABASE_URL=postgresql://user:password@localhost:5432/voice_task_db

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_SECRET=random_secret_string_for_webhook_verification
BASE_URL=https://your-backend-domain.com

# Frontend origin for CORS (comma-separated for multiple)
FRONTEND_ORIGIN=https://your-frontend-domain.com

# OpenRouter (required for voice transcription)
OPENROUTER_API_KEY=sk-or-...
OPENROUTER_MODEL=openai/gpt-audio-mini
# Optional metadata headers sent to OpenRouter
# OPENROUTER_REFERER=https://your-frontend-domain.com
# OPENROUTER_TITLE=Voice Task Bot
