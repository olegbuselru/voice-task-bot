generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           String    @id @default(uuid())
  text         String
  originalText String
  important    Boolean   @default(false)
  deadline     DateTime?
  status       String    @default("active")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?
  clientId     String?
  client       Client?   @relation(fields: [clientId], references: [id], onDelete: SetNull)

  @@index([clientId])
}

model Client {
  id             String   @id @default(uuid())
  displayName    String
  normalizedName String   @unique
  createdAt      DateTime @default(now())
  tasks          Task[]
  appointments   Appointment[]
}

enum AppointmentStatus {
  planned
  done
  canceled
}

enum AppointmentKind {
  session
  homework
  admin
  other
}

model Appointment {
  id        String            @id @default(uuid())
  clientId  String
  client    Client            @relation(fields: [clientId], references: [id], onDelete: Cascade)
  startAt   DateTime
  endAt     DateTime
  status    AppointmentStatus @default(planned)
  kind      AppointmentKind   @default(session)
  notes     String?
  createdAt DateTime          @default(now())

  @@index([clientId])
  @@index([startAt])
  @@index([status])
}

model TherapistSettings {
  id             String   @id @default(uuid())
  telegramChatId String   @unique
  timezone       String   @default("Asia/Bangkok")
  workDays       String[] @default(["mon", "tue", "wed", "thu", "fri"])
  workStart      String   @default("10:00")
  workEnd        String   @default("18:00")
  sessionMinutes Int      @default(50)
  bufferMinutes  Int      @default(10)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum PendingActionType {
  pick_slot
  confirm_cancel
  reschedule
  confirm_reschedule
  confirm_settings_save
  confirm_create_appointment
}

model ConversationState {
  id            String   @id @default(uuid())
  chatId        String   @unique
  screen        String
  step          String
  payloadJson   Json?
  screenMessageId String?
  weekAnchor    DateTime?
  dayIso        String?
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())

  @@index([screen])
}

model PendingAction {
  id          String            @id @default(uuid())
  chatId      String
  type        PendingActionType
  payloadJson Json
  expiresAt   DateTime
  createdAt   DateTime          @default(now())

  @@index([chatId])
  @@index([expiresAt])
  @@index([type])
}

model TherapistSettingsDraft {
  id             String   @id @default(uuid())
  telegramChatId String   @unique
  step           String   @default("idle")
  selectedDays   String[] @default([])
  startTime      String?
  endTime        String?
  timezone       String?
  sessionMinutes Int?
  bufferMinutes  Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
