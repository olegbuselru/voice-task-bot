generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id           String    @id @default(uuid())
  text         String
  originalText String
  important    Boolean   @default(false)
  deadline     DateTime?
  status       String    @default("active")
  createdAt    DateTime  @default(now())
  completedAt  DateTime?
}
