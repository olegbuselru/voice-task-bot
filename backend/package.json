{
  "name": "voice-task-bot-backend",
  "version": "1.0.0",
  "description": "Minimal Telegram reminder bot backend",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "npm run build",
    "db:generate": "prisma generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "prisma:validate": "prisma validate"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "prisma": "^5.7.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
